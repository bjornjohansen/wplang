{
  "name": "bjornjohansen/wplang",
  "description": "Composer plugin to download translation files from wordpress.org",
  "license": "GPL-2.0+",
  "type": "composer-plugin",
  "authors": [
    {
      "name": "BjÃ¸rn Johansen",
      "email": "post@bjornjohansen.no"
    }
  ],
  "require": {
    "php": ">=7.2",
    "composer-plugin-api": "^2.0"
  },
  "require-dev": {
    "composer/composer": "^2.0",
    "squizlabs/php_codesniffer": "^3.11",
    "wp-coding-standards/wpcs": "^3.1",
    "slevomat/coding-standard": "^8.15",
    "phpcompatibility/php-compatibility": "^9.3"
  },
  "scripts": {
    "compat": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs --standard=.phpcompat.xml --report=summary,source",
    "format": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcbf --report=summary,source",
    "lint": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs --report=full,source",
    "lint:errors": "@lint --warning-severity=0"
  },
  "autoload": {
    "psr-4": {
      "BJ\\Wplang\\": "src"
    }
  },
  "extra": {
    "class": "BJ\\Wplang\\Wplang"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
